<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.Vistas.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registro"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtPassword" Placeholder="Ingrese el password"/>
            <Button x:Name="btnAgregar" Text="Registrar" Clicked="btnAgregar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>