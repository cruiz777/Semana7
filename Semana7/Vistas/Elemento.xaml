<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.Vistas.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar o Eliminar Usuarios"/>
            <Entry x:Name="txtNombre" Text="nombre" Placeholder="ingrese el nombre"/>
            <Entry x:Name="txtUsuario" Text="usuario" Placeholder="ingrese el usuario"/>
            <Entry x:Name="txtPassword" Text="password" Placeholder="ingrese la contrasena" />
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>